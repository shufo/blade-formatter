{
  "name": "blade-formatter",
  "engines": {
    "node": ">= 10.0.0"
  },
  "keywords": [
    "php",
    "formatter",
    "laravel"
  ],
  "version": "1.6.4",
  "description": "An opinionated blade template formatter for Laravel",
  "main": "src/main.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src -c .eslintrc.json --ext js",
    "fix": "prettier {src,__{tests,mocks}__}/**/*.js --write",
    "check_formatted": "prettier **/*.js -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "bin": {
    "blade-formatter": "bin/blade-formatter"
  },
  "author": "Shuhei Hayashibara",
  "license": "MIT",
  "dependencies": {
    "@prettier/plugin-php": "^0.14.0",
    "chalk": "^4.1.0",
    "concat-stream": "^2.0.0",
    "detect-indent": "^6.0.0",
    "esm": "^3.2.25",
    "glob": "^7.1.4",
    "js-beautify": "^1.10.2",
    "lodash": "^4.17.19",
    "php-parser": "^3.0.0-prerelease.9",
    "prettier": "^2.0.5",
    "vscode-oniguruma": "^1.3.1",
    "vscode-textmate": "^4.2.2",
    "yargs": "^15.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "app-root-path": "^3.0.0",
    "babel-jest": "^26.1.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^9.0.1",
    "jest": "^26.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shufo/blade-formatter.git"
  }
}
