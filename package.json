{
  "name": "blade-formatter",
  "engines": {
    "node": ">= 10.0.0"
  },
  "keywords": [
    "php",
    "formatter",
    "laravel"
  ],
  "version": "1.15.1",
  "description": "An opinionated blade template formatter for Laravel",
  "main": "./dist/bundle.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "default": "./dist/bundle.js"
    }
  },
  "scripts": {
    "build": "node_modules/.bin/webpack -c webpack.config.ts --progress",
    "build-main": "node_modules/.bin/webpack -c webpack.main.config.ts --progress",
    "build-cli": "node_modules/.bin/webpack -c webpack.cli.config.ts --progress",
    "watch": "node_modules/.bin/webpack -c webpack.config.ts --watch --progress",
    "watch-main": "node_modules/.bin/webpack -c webpack.main.config.ts --watch --progress",
    "watch-cli": "node_modules/.bin/webpack -c webpack.cli.config.ts --watch --progress",
    "test": "yarn run build && node --experimental-vm-modules node_modules/.bin/jest",
    "lint": "eslint src -c .eslintrc.js --ext ts",
    "fix": "prettier {src,__{tests,mocks}__}/**/*.ts --write",
    "check_formatted": "prettier **/*.ts -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "bin": {
    "blade-formatter": "bin/blade-formatter"
  },
  "author": "Shuhei Hayashibara",
  "license": "MIT",
  "dependencies": {
    "@prettier/plugin-php": "^0.17.6",
    "aigle": "^1.14.1",
    "chalk": "^4.1.0",
    "concat-stream": "^2.0.0",
    "detect-indent": "^6.0.0",
    "esm": "^3.2.25",
    "glob": "^7.1.4",
    "ignore": "^5.1.8",
    "js-beautify": "^1.14.0",
    "lodash": "^4.17.19",
    "php-parser": "3.0.3",
    "prettier": "^2.2.0",
    "vscode-oniguruma": "1.6.1",
    "vscode-textmate": "^6.0.0",
    "xregexp": "^5.0.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-modules-commonjs": "^7.16.5",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.16.5",
    "@types/concat-stream": "^1.6.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.3",
    "@types/js-beautify": "^1.13.3",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@types/webpack": "^5.28.0",
    "@types/xregexp": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "app-root-path": "^3.0.0",
    "babel-jest": "^27.4.5",
    "bundle-declarations-webpack-plugin": "^2.2.2",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.0",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-migrate": "^0.1.27",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shufo/blade-formatter.git"
  },
  "files": [
    "dist",
    "src",
    "bin",
    "wasm",
    "syntaxes",
    "CHANGELOG.md"
  ]
}
